<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:divider">@drawable/shape_divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:buttonBarStyle">@style/AppTheme.ButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="AppTheme.ButtonBar" paren="@style/ThemeOverlay.Widget.ButtonBar">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    </style>

</resources>